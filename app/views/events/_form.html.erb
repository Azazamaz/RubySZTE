<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table style="border-spacing: 1em; border-collapse: separate;">
    <tr>
      <td><%= form.label 'Név' %></td>
      <td><%= form.text_field :name, id: :event_name %></td>
    </tr>
    <tr>
      <td><%= form.label 'Helyszín' %></td>
      <td><%= form.text_field :location, id: :event_location %></td>
    </tr>
    <tr>
      <td><%= form.label 'Leírás' %></td>
      <td><%= form.text_area :description, id: :event_description, cols: "60", rows: "3" %></td>
    </tr>
    <tr>
      <td><%= form.label 'Dátum' %></td>
      <td><%= form.datetime_select :date, id: :event_date %></td>
    </tr>
    <tr>
      <td> <%= form.label 'Kategória' %></td>
      <td> <%= form.select :category, ['Művészet', 'Sport', 'Szórakozás', 'Egyetem', 'Kiállítás', 'Utazás'] %></td>
    </tr>
    <tr>
      <td><%= form.label 'Résztvevők' %></td>
      <td><%= form.number_field :participants, id: :event_participants, :value => 0 %></td>
    </tr>
  </table>

  <div class="actions">
    <%= form.submit 'Létrehozás' %>
  </div>
<% end %>
